<hr>
<div class="added_cat">
  <h1>Show Categories | <%= link_to 'New Gift Guide', new_guide_path %></h1>

  <table id="customers">
    <thead>
      <tr>
        <th>Name</th>
        <th>Link</th>
        <th>Display in navbar</th>
        <th colspan="3">Admin</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @guides.each do |guide| %>
        <tr>
          <td><%= guide.name %></td>
          
          <td><%= guide.display_in_navbar %></td>
          <td><%= link_to 'Show', guide %></td>
          <td><%= link_to 'Edit', edit_guide_path(guide) %></td>
          <td><%= link_to 'Destroy', guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>