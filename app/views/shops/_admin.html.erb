<hr>
<div class="added_cat">
  <h1>Shop Admin Controller | <%= link_to 'New Shops', new_shop_path %></h1>

  <table id="customers">
    <thead>
      <tr>
        <th>Name</th>
        <th>Display in navbar</th>
        <th colspan="3">Admin</th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.name %></td>
          <td><%= shop.display_in_navbar %></td>
          <td><%= link_to 'Show', shop %></td>
          <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
          <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>