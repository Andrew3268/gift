<div class="layout">
  <div class="wrap">
    <div class="top_margin clearfix">

      <br/>
      <p>All Shops</p>      
      <div class="clearfix">
        <% Shop.where(display_in_navbar: true).each do |shop| %>
          <div class="category_card">
            <div class="box">
              <div class="image"><a href="#n"><%= image_tag(shop.shop_image) if shop.shop_image.attached? %></a></div>
            </div>
            <p><%= link_to shop.name, posts_shop_path(shop: shop.name) %></p>
          </div>
        <% end %>
      </div>

      
      <!-- Only in navbar<br/>
      <% Shop.where(display_in_navbar: true).each do |shop| %>
        <%= link_to shop.name, posts_shop_path(shop: shop.name) %>
      <% end %> -->

      <br/>

    </div>
    <% if current_user && current_user.admin %>
      <%= render 'shops/admin' %>
    <% end %>
  </div>
</div>