<div class="layout">
  <div class="wrap">
    <div class="top_wrapper clearfix"><%= render 'shared/second_menu' %></div>
      <div class="show_box mid_wrapper clearfix">
        <div class="active_image">
          <div class="active_image_box">
            <%= image_tag(@post.image) if @post.image.attached? %>
          </div>
        </div>

        <div class="admin">
            <%= link_to 'Edit', edit_post_path(@post) %> |
            <%= link_to 'Back', posts_path %>
          </div>
        <div class="inner">
          <p><%= @post.title %></p>
          <p><%= @post.body %></p>
          <p><%= @post.category.name %></p>
        </div>
      </div>
    </div>
  </div>
</div>
