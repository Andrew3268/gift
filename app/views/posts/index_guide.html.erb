<div class="layout">
  <div class="wrap">
    <div class="top_wrapper clearfix"><%= render 'shared/second_menu' %></div>
    <div class="mid_wrapper">
      <!-- <p id="notice"><%= notice %></p> -->


      <div class="sd_category">
        <% if params[:guide].present? %>
          <div><p><a href="/guides">Gift Guide</a> > <span><%= params[:guide] %></span></p></div>
        <% else %>
          <!-- <div class="dealpage_title sd_com"><p>Sales & Promotions</p></div>     -->
        <% end %>
      </div>

    
      <div class="index_box clearfix">
        <% @posts.each do |post| %>
          <div class="index_card">
            <div class="index_image">
              <%= link_to (image_tag post.image, alt: "haha"), post if post.image.attached? %>
            </div>
            <div class="index_inner">
              <p><%= post.title %></p>
              <!-- <%= post.body %> -->
              <%= post.guide.name %>
              <div class="admin">
                <%= link_to 'Edit', edit_post_path(post) %> |
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>

          </div>
        <% end %>
      </div>


    </div>
  </div>
</div>