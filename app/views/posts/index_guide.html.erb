            <a href="#" class="nav-link">News</a>
            <a href="#" class="nav-link">Shop</a>
            <a href="#" class="nav-link">Contact</a>
          </nav>
          <nav id="categories-js" class="categories">
            <div class="category"><a href="/">Everything</a></div>
            <% Category.where(display_in_navbar: true).each do |cat| %>
              <div class="category"><%= link_to cat.name, posts_path(category: cat.name) %></div>
            <% end %>
          </nav>
        </aside>

        <div class="mcb">
          <main class="main-ctn clearfix">
