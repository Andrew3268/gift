<%= render 'shared/header' %>
<div class="layout">
  <div class="wrap visual_wrap">
    <div class="visual clearfix">
      <h2>Discover The Best Items on Coupang</h2>
      <p>Curated by thinking defferently.</p>
      <div class="search_pc">
        <%= form_for "",url: posts_path, role: "search", method: :get do %><%= text_field_tag :search, @search_term, placeholder: "Search here..." %><% end %>          
        <ul class="sub_menu">
          <li><a href="#n">Latest</a></li>
          <li><a href="#n">Trending</a></li>
          <li><a href="#n">Spare</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>


<div class="layout">
  <div class="wrap">
   
    <!-- <div class="middle_margin clearfix"><%= render 'shared/second_menu' %></div> -->
    
    <div class="mid_wrapper">

      <div class="sd_category">
        <% if params[:category].present? %>
          <div><p><a href="/categories">Categories</a> > <span><%= params[:category] %></span></p></div>
        <% else %>
          <% if params[:guide].present? %>
            <div><p><a href="/guides">Gift Guide</a> > <span><%= params[:guide] %></span></p></div>
          <% end %> 
          <!-- <div class="dealpage_title sd_com"><p>Sales & Promotions</p></div>     -->
        <% end %>
      </div>

      <div class="index_box clearfix index_comm">
        <% @posts.each do |post| %>
          <div class="index_card">
            <div class="index_image_box clearfix">
              <% if post.image_toggle.present? %>
                <% post.image_toggle %>
                <div class="index_image contain">
                  <%= link_to (image_tag post.image, alt: ""), post if post.image.attached? %>
                </div>
              <% else %>
                <div class="index_image">
                  <%= link_to (image_tag post.image, alt: ""), post if post.image.attached? %>
                </div>
              <% end %>
            </div>

            <div class="inner">
              <p><%= post.title %></p>
              <div class="pricing">
                <span class="is"><%= number_to_currency(post.is_price, locale: :kr) %>원</span>
                <% if post.was_price.present? %>
                  <span class="was"><%= number_to_currency(post.was_price, locale: :kr) %>원</span>
                  <% final_pct = 0 %>
                  <% final_pct =  (post.was_price - post.is_price) / post.was_price * 100 %>
                  <span class="pct">( <%= number_to_percentage(final_pct, precision: 0) %> OFF )</span>
                <% end %>
              </div>
              <!-- <%= post.description %> -->
              <!-- <%= post.category.name %> -->
              <div class="admin">
                <%= link_to 'Edit', edit_post_path(post) %> |
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>

          </div>
        <% end %>
      </div>


    </div><!--mid_wrapper-->
  </div>
</div>